<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/Descriptionaddress_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="Enter Address to be delivered"
                android:textColor="#020202"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Description_toolbar"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/CustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Reciever Name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/head"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/CustomerContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Reciever Contact number"
                android:inputType="number"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/CustomerName"
                tools:layout_editor_absoluteX="29dp" />

            <EditText
                android:id="@+id/HouseNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Reciever House name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/CustomerContact"
                tools:layout_editor_absoluteX="-16dp" />

            <EditText
                android:id="@+id/Housename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Reciever House number"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/HouseNO" />

            <EditText
                android:id="@+id/ColonyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Colony Name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/Housename"
                tools:layout_editor_absoluteX="19dp" />

            <EditText
                android:id="@+id/Streetname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Reciever street name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ColonyName" />

            <EditText
                android:id="@+id/Landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Reciever Land mark"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/Streetname"
                tools:layout_editor_absoluteX="10dp" />

            <EditText
                android:id="@+id/Cityname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Reciever City name"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/Landmark" />

            <EditText
                android:id="@+id/PinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="64dp"
                android:inputType="number"
                android:hint="Enter Reciever PIN code"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/Cityname"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:text="Select nickname :"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/PinCode"
                tools:layout_editor_absoluteX="16dp" />


            <Spinner
                android:id="@+id/NicknameSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/PinCode"></Spinner>

            <TextView
                android:id="@+id/Nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="8dp"
                android:text="nickname"
                android:textSize="30dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buybtn"
                tools:layout_editor_absoluteX="157dp" />
            <TextView
                android:id="@+id/locationtxt"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/locationbtn"
                android:layout_width="match_parent"
                android:background="#E0F1F1"
                android:textSize="15dp"
                android:textColor="#0C0C0C"
                android:layout_height="200dp"/>

            <Button
                android:id="@+id/buybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Buy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.584"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationtxt"
                app:layout_constraintVertical_bias="0.167" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="Delivery charges:15/-"
                android:textAlignment="center"
                android:textColor="#020202"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/Cod"
                tools:layout_editor_absoluteX="0dp" />


            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="Select Weight"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/buybtn"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                app:layout_constraintVertical_bias="0.086"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/Weightnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="44dp"
                android:inputType="number"
                android:hint="No of Kg"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/NicknameSpinner" />

            <ImageButton
                android:id="@+id/Rightbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:src="@mipmap/righticon"
                app:layout_constraintStart_toEndOf="@+id/Weightnumber"
                app:layout_constraintTop_toTopOf="@+id/Weightnumber" />

            <TextView
                android:id="@+id/TotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="8dp"
                android:hint="Your Total Price will be"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.594"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Weightnumber" />

            <Button
                android:id="@+id/locationbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7F8FC"
                android:drawableLeft="@drawable/mylocationicon"
                android:padding="15dp"
                android:text="get your location"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TotalPrice" />
            <ProgressBar
                android:id="@+id/addresprogress"
                style="@style/Progressbarstyle"
                android:background="#A1BFD6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:indeterminate="true"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationbtn" />



            <Button
                android:id="@+id/Cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:layout_margin="15dp"
                android:visibility="invisible"
                android:text="Cash On Delivery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.587"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buybtn" />

        </android.support.constraint.ConstraintLayout>



    </ScrollView>

</android.support.constraint.ConstraintLayout>