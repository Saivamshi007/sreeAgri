<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionAdderss">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Descriptionaddress_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/head"
        android:textColor="#020202"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Please Enter the Address to be delivered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Description_toolbar"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/CustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Enter Reciever Name"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/head"
        tools:layout_editor_absoluteX="117dp" />

    <EditText
        android:id="@+id/CustomerContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Reciever Contact number"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/CustomerName"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/HouseNO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Reciever House name"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/CustomerContact"
        tools:layout_editor_absoluteX="-16dp" />

    <EditText
        android:id="@+id/Housename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Reciever House number"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/HouseNO" />

    <EditText
        android:id="@+id/ColonyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Colony Name"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Housename"
        tools:layout_editor_absoluteX="19dp" />

    <EditText
        android:id="@+id/Streetname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Reciever street name"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ColonyName" />

    <EditText
        android:id="@+id/Landmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Reciever Land mark"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Streetname"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/Cityname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Reciever City name"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Landmark" />

    <EditText
        android:id="@+id/PinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Reciever PIN code"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Cityname" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Select nickname :"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/PinCode"
        tools:layout_editor_absoluteX="0dp" />


    <Spinner
        android:id="@+id/NicknameSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/PinCode"></Spinner>

    <TextView
        android:id="@+id/Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:text="nickname"
        app:layout_constraintStart_toEndOf="@+id/NicknameSpinner"
        app:layout_constraintTop_toTopOf="@+id/NicknameSpinner" />

            <Button
                android:id="@+id/buybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="Buy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

        </android.support.constraint.ConstraintLayout>



    </ScrollView>

</android.support.constraint.ConstraintLayout>